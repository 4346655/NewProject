@model Models.DTO.KhachHang
@using Models.DAO
@{
   

}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Hồ sơ</title>
    <link href="~/Clientassets/css/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Clientassets/css/user.css" rel="stylesheet" />
    <style>
        .thongbao {
            text-align: center;
            width: 400px;
            font-size: 20px;
            color: #33d7d4;
            margin-left:40px;
            margin-top:40px;
        }
    </style>
</head>

<body>
    <div class="body-content">

        <div class="left-body">
            <div class="col-xl-4  top-left-body">
                <div class="card1">
                    <div style="text-align:center">
                        <img src="@Model.AnhDaiDien" alt="" class="round" style="border:1px solid;margin-top:30px;">
                        <h2>@Model.HoTen</h2>
                        <h3>------------------</h3>

                    </div>
                </div>
            </div>
            <div class="bot-left-body">
                <div class="topbutton">
                    <h3>Thông tin chi tiết</h3>
                    <div style="display:flex;margin-top:20px">
                        <h4 style="min-width:100px">Họ tên :</h4> <i>@Model.HoTen</i>
                    </div>
                    <div style="display:flex">
                        <h4 style="min-width:100px">Địa chỉ  :</h4> <i>@Model.Diachi</i>
                    </div>
                    <div style="display:flex">
                        <h4 style="min-width:100px">Email  :</h4> <i>@Model.Email</i>
                    </div>
                    <div style="display:flex">
                        <h4 style="min-width:100px">SDT  :</h4> <i>@Model.SDT</i>
                    </div>
                </div>

            </div>
        </div>

        <div class="right-body">
            <div class="title_profile">
                <div class="center_profile">
                  

                    <a href="/sua-ho-so" class="btn-func" id="btn2" style="background-color:lightgray"><p style="margin-top:20px;">Chỉnh sửa</p></a>

                    <a href="/doi-mat-khau" class="btn-func" id="btn3" style="background-color: lightblue"><p style="margin-top:20px;">Đổi mật khẩu</p> </a>
                </div>
            </div>

            <div id="content3" style="display:block;">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                   
                    <form action="/doi-mat-khau" method="get">
                        <div style="display:flex;width:100%;height:435px">
                            <div style="width: 50%; height:100%">
                                <div class="subdiv" style="margin-top:50px">
                                    <div class="body_content">
                                        <div class="namecolumm"><p class="cnt_column">Mật khẩu hiện tại </p></div>
                                        <div class="contentcolumn"> <input class="content_column" style="margin-left:30px;" name="oldpass" id="oldpass" type="password"/> </div>
                                    </div>
                                </div>
                                <div class="subdiv">
                                    <div class="body_content">
                                        <div class="namecolumm"><p class="cnt_column">Mật khẩu mới</p></div>
                                        <div class="contentcolumn"> <input class="content_column" style="margin-left:30px;" name="newpass" id="newpass" type="password" /> </div>
                                    </div>
                                </div>
                                <div class="subdiv">
                                    <div class="body_content">
                                        <div class="namecolumm"><p class="cnt_column">Xác nhận mật khẩu </p></div>
                                        <div class="contentcolumn"> <input class="content_column" style="margin-left:30px;" name="confirm" id="confirm" type="password" /> </div>
                                    </div>
                                </div>
                                <div class="subdiv">
                                    <div class="">
                                        <i> @Html.ValidationSummary(true, null, new { @class = "thongbao" })</i>
                                        <hr />
                                    </div>
                                </div>
                            </div>
                            <div style="width: 50%; height: 100% ">
                                <div style="width: 100%; height: 100% ">
                                    <div style="width:100%;text-align:center;height:15%;padding-top:5%">
                                        <h3>Hướng dẫn đặt mật khẩu</h3>
                                    </div>
                                    <div style="width:100%;border:0.5px solid;height:100%">
                                        <div style="margin-top:20px;margin-left:30px">
                                            <p style="margin-top:20px">+)  Mật khẩu mới cần có hơn 8 kí tự</p>
                                            <p style="margin-top:20px">+)  Mật khẩu không chưa dấu cách</p>
                                            <p style="margin-top:20px">+)  Xác nhận mật khẩu trước khi đổi mật khẩu</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="text-center">
                            <button id="btnchangpassword" type="submit" style="margin-top:75px;" class="btn btn-primary  button-saveinfo">Đổi mật khẩu</button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>

    <script src="~/Clientassets/js/apexcharts.min.js"></script>
    <script src="~/Clientassets/js/bootstrap.bundle.min.js"></script>


    <script>
        function BrowserServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                document.getElementById(field).value = fileUrl;
            };
            finder.popup();
        }
    </script>
    


</body>

</html>

