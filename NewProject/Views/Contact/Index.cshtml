    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>

    <style>
        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        #map {
            width: 400px;
            height: 400px;
            margin-top: 20px;
            min-width: 300px;
        }

        .info-shop {
            width: 50%;
